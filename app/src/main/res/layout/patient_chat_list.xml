            android:layout_height="wrap_content"
            android:text="Firstname"
            android:textStyle="bold"
            android:textSize="16sp"
            android:id="@+id/patientTextFirstName"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="temp"
            android:textSize="16sp"

            android:id="@+id/patientTemp"/>

    </LinearLayout>
